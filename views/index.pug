extends layout.pug

block content
  .page
    .panel-left
      .section
        label IdInstance
        input#idInstance(type="text" placeholder="IdInstance" value=idInstance)
      .section
        label ApiTokenInstance
        .input-with-toggle
          input#apiTokenInstance(type="password" placeholder="ApiTokenInstance" value=apiTokenInstance autocomplete="off")
          button.toggle-password(type="button" aria-label="Показать токен" title="Показать токен")
            svg.icon-eye(viewBox="0 0 24 24" width="20" height="20" aria-hidden="true")
              path(fill="currentColor" d="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z")
            svg.icon-eye-off(viewBox="0 0 24 24" width="20" height="20" aria-hidden="true")
              path(fill="currentColor" d="M12 7c2.76 0 5 2.24 5 5 0 .65-.13 1.26-.36 1.83l2.92 2.92c1.51-1.26 2.7-2.89 3.43-4.75-1.73-4.39-6-7.5-11-7.5-1.4 0-2.74.25-3.98.7l2.16 2.16C10.74 7.13 11.35 7 12 7zM2 4.27l2.28 2.28.46.46C3.08 8.3 1.78 10.02 1 12c1.73 4.39 6 7.5 11 7.5 1.55 0 3.03-.3 4.38-.82l.42.42L19.73 22 21 20.73 3.27 3 2 4.27zM7.53 9.8l1.55 1.55c-.05.21-.08.43-.08.65 0 1.66 1.34 3 3 3 .22 0 .44-.03.65-.08l1.55 1.55c-.67.33-1.41.53-2.21.53-2.76 0-5-2.24-5-5 0-.8.2-1.54.53-2.21zm4.31-.78l3.15 3.15.02-.16c0-1.66-1.34-3-3-3l-.17.01z")
      .section.buttons
        button#btnGetSettings(type="button") getSettings
        button#btnGetStateInstance(type="button") getStateInstance

      .section
        h3 Отправка сообщения
        label Получатель
        input#messageChatId(type="text" value=chatId placeholder=chatId)
        label Сообщение
        textarea#messageText(rows="4" placeholder="Текст сообщения") Hello World!
        button#btnSendMessage(type="button") sendMessage

      .section
        h3 Отправка файла по URL
        label Получатель
        input#fileChatId(type="text" value=chatId placeholder=chatId)
        label URL файла
        input#fileUrl(type="text" value="https://avatars.mds.yandex.net/get-pdb/477388/77f64197-87d2-42cf-9305-14f49c65f1da/s375" placeholder="https://...")
        button#btnSendFileByUrl(type="button") sendFileByUrl

    .panel-right
      h2 Ответ:
      pre#response {}

  script(src="/app.js")
